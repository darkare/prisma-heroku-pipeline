generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  //shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Person {
  id            Int        @id @default(autoincrement())
  name          String 
  age           Int
  hobbies     Hobby[]
}

model Hobby {
  id            Int             @id @default(autoincrement())
  Content       String   
  person        Person @relation(fields: [personId], references: [id])
  personId Int
}


